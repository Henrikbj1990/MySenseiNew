<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Areas/Admin/Content/AdminStyles.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        .container {
            padding-top: 10px;
        }
        .validation-summary-errors {
            color: #f00;
        }
    </style>
</head>
    <body class="container">

<div id="wrapper" class="page-wrap">

    <header>
        <div class="container clearfix">
            <a href="@Url.Action("Index", "Home")">
                <img class="logo" src="@Url.Content("~/Content/img/logo.png")" />
            </a>
        <nav>

            @Html.ActionLink("Users", "Index", "Admin")
            @Html.ActionLink("Roles", "Index", "RoleAdmin")
            @Html.ActionLink("Courses", "Index", "Courses")

        </nav>
            </div>
</header>


        <div class="container">
            @RenderBody()
        </div>

</div>


        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    </body>
</html>