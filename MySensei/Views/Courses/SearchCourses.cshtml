@model List<MySensei.Models.Course>
@{
    ViewBag.Title = "SearchCourses";
}

<section class="search" style="margin-top: 10px;">

    @using (Html.BeginForm("SearchCourses", "Courses", FormMethod.Post, new { @class = "sform" }))
    {
        <fieldset class="">
            <label class="input">
                @Html.TextBox("SearchString", null, new { @placeholder = "Søg .." })
            </label>
            <button type="submit" class="button s-btn">Find Sensei</button>
        </fieldset>
    }
</section>
<div class="clearfix"></div>
<section class="bluebg">
    @foreach (var course in Model)
    {
        <div class="grid-4">
            <h3>@course.Title</h3>
            <p>@course.Description</p>
            @Html.ActionLink("Se kursus", "SingleCourse", new { courseId = course.CourseID })
        </div>
    }
    <div class="clearfix"></div>
</section>
   
