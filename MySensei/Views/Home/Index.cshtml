@model List<MySensei.Models.Course>
@{
    ViewBag.Title = "Forside";
}

<div class="main-content">
    <section class="fbg">
        <div class="container">
            <div class="split">
                <h1>Find en sensei der kan hjælpe dig.</h1>
                
                <div class="split">
                    <p class="s-height">Jeg vil gerne finde en Sensei der kan lære mig at . .</p>
                    @using (Html.BeginForm("SearchCourses", "Courses", FormMethod.Post, new { @class = "sform" }))
        {
                        <fieldset class="">
                            <label class="input">
                                @Html.TextBox("SearchString", null, new { @placeholder = ".. Spille guitar" })
                            </label>
                            <button type="submit" class="button s-btn">Find Sensei</button>
                        </fieldset>
        }
                </div>

                    <div class="split">
                        <div class="hr"></div>
                        <p class="s-height">Jeg vil gerne blive en Sensei der kan lære andre at . .</p>
                        
                        @using (Html.BeginForm("AddCourse", "Profile", FormMethod.Get, new {@class = "sform"}))
                        {
                            @*@Html.AntiForgeryToken()*@
                            <fieldset>
                                <label class="input">
                                    @Html.TextBox("courseTitle", null, new { @placeholder = ".. Tegne" })
                                </label>
                                <button type="submit" class="button s-btn">Bliv Sensei</button>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </section>

        <div class="clearfix"></div>
    <section class="bluebg" style="margin-top:-10px;">
        <div class="container">
            <h1 class="center">Nyeste kurser</h1>
            <div class="row">
                @foreach (var course in Model)
                {
                    <div class="grid-4">
                        <h3 class="center">@course.Title</h3>
                        <p id="author">Sensei: @Html.ActionLink(course.CourseTeacher.UserName, "PublicProfile", "Profile", new { profileId = course.CourseTeacher.Id }, null)</p>
                        <img class="coursePic" src="http://placehold.it/250/ffcb63/47b7b7?text=Coming+Soon">
                        <p>@course.Description</p>
                        @Html.ActionLink("Se kursus", "SingleCourse", "Courses", new { courseId = course.CourseID }, null)
                    </div>
                }
            </div>
            <div class="clearfix"></div>
        </div>
    </section>

    </div>