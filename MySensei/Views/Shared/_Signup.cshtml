@model MySensei.Models.CreateModel
<h2>Create User</h2>
@Html.ValidationSummary(false)
@using (Html.BeginForm(Html.BeginForm("Index", "SignUp", FormMethod.Post)))
{
    <aside class="sidebar" id="sidebarSignup">
        <div class="side-content">
            <a href="#" class="close-menu">&#x02297;</a> <h3>OPRET BRUGER</h3>
            <form action="" class="mform">

                <fieldset>
                    <section class="mform">
                        <label class="input">
                            <i class="icon-append icon-user"></i>
                            @Html.TextBoxFor(x => x.UserName, new { @placeholder = "Brugernavn" })
                            <b class="tooltip tooltip-bottom-right">Kun almindelige tegn og tal</b>
                        </label>
                    </section>

                    <section class="mform">
                        <label class="input">
                            <i class="icon-append icon-envelope-alt"></i>
                            @Html.TextBoxFor(x => x.Email, new { @placeholder = "Email" })
                            <b class="tooltip tooltip-bottom-right">Så vi kan verificere din email</b>
                        </label>
                    </section>

                    <section class="mform">
                        <label class="input">
                            <i class="icon-append icon-lock"></i>
                            @Html.PasswordFor(x => x.Password, new { @placeholder = "Password" })
                            <b class="tooltip tooltip-bottom-right">Kun almindelige tegn og tal</b>
                        </label>
                    </section>

                    @*<section class="mform">
                        <label class="input">
                            <i class="icon-append icon-lock"></i>
                            <input type="password" placeholder="Gentag password">
                            <b class="tooltip tooltip-bottom-right">Kun almindelige tegn og tal</b>
                        </label>
                    </section>*@
                </fieldset>

                <fieldset>
                    <div class="row">
                        <section class="col half mform">
                            <label class="input">
                                @Html.TextBoxFor(x => x.FirstName, new { @placeholder = "Fornavn" })
                            </label>
                        </section>
                        <section class="col half mform">
                            <label class="input">
                                @Html.TextBoxFor(x => x.LastName, new { @placeholder = "Efternavn" })
                            </label>
                        </section>
                    </div>

                    @*<section>
                        <label class="select">
                            <select>
                                <option value="0" selected disabled>Køn</option>
                                <option value="1">Mand</option>
                                <option value="2">Kvinde</option>
                            </select>
                            <i></i>
                        </label>
                    </section>*@

                    <section>
                        <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Jeg godkender <a href="#">brugerbetingelserne</a></label>
                    </section>
                </fieldset>
                <footer>
                    <button type="submit" class="button">Opret</button>
                </footer>
            </form>
        </div>
    </aside>
}
