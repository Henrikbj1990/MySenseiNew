@model MySensei.Models.LoginModel
<h2>Log In</h2>
@Html.ValidationSummary()
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <aside class="sidebar" id="sidebar">
        <div class="side-content">
            <a href="#" class="close-menu">&#x02297;</a> <h3>LOGIN</h3>
            <form action="" class="mform">

                <fieldset>
                    <section class="mform">
                        <label class="input">
                            <i class="icon-append icon-user"></i>
                            @Html.TextBoxFor(x => x.UserName, new { @placeholder = "Brugernavn" })
                            <b class="tooltip tooltip-bottom-right">Kun almindelige tegn og tal</b>
                        </label>
                    </section>

                    <section class="mform">
                        <label class="input">
                            <i class="icon-append icon-lock"></i>
                            @Html.PasswordFor(x => x.Password, new { @placeholder = "Password" })
                            <b class="tooltip tooltip-bottom-right">Kun almindelige tegn og tal</b>
                        </label>
                    </section>

                </fieldset>

                <footer>
                    <button type="submit" class="button">Login</button>
                </footer>
            </form>
        </div>
    </aside>



    <button class="button" type="submit">Log In</button>
}